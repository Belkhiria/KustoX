// Test queries with intentional errors to demonstrate improved error reporting

// Example 1: Column name typo (should show "Failed to resolve scalar expression")
StormEvents
| project StartTime, EventType, DamagePropertyy  // Note the extra 'y' - this will cause an error
| take 10;

// Example 2: Invalid function name
StormEvents
| extend InvalidColumn = invalidfunction(StartTime)  // This function doesn't exist
| take 5;

// Example 3: Invalid table name
NonExistentTable
| project *
| take 10;

// Example 4: Syntax error - missing closing parenthesis
StormEvents
| where StartTime >= ago(7d  // Missing closing parenthesis
| take 10;

// Example 5: Invalid operator usage
StormEvents
| where EventType contains_all "Tornado"  // Wrong operator name
| take 10;

// Example 6: Type mismatch
StormEvents
| where StartTime == "not_a_date"  // Type mismatch
| take 10;

// Example 7: Invalid aggregation in summarize
StormEvents
| summarize invalidagg() by EventType  // Invalid aggregation function
| take 10;
