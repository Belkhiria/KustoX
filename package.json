{
  "name": "kustox",
  "displayName": "KustoX - Modern Kusto Explorer & Microsoft Fabric (Beta)",
  "description": "ðŸš§ BETA: The most advanced VS Code extension for Azure Data Explorer/Kusto and Microsoft Fabric Eventhouse with revolutionary unified AAD authentication, Virtual File System (VFS) and AI training capabilities",
  "version": "0.2.2",
  "publisher": "kustox",
  "icon": "Icon/KustoXIcon.png",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Belkhiria/KustoX.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "kusto",
    "kql",
    "azure data explorer",
    "microsoft fabric",
    "fabric eventhouse",
    "data science",
    "analytics",
    "query",
    "visualization",
    "AI"
  ],
  "categories": [
    "Other",
    "Data Science",
    "Visualization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kusto",
        "aliases": [
          "Kusto",
          "KQL",
          "kusto"
        ],
        "extensions": [
          ".kql",
          ".kusto"
        ],
        "configuration": "./syntaxes/kusto-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kusto",
        "scopeName": "source.kusto",
        "path": "./syntaxes/kusto.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "KustoX Dark Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/kustox-dark-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "kusto",
        "path": "./snippets/kusto-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "kustox.openExplorer",
        "title": "Open KustoX Explorer",
        "category": "KustoX"
      },
      {
        "command": "kustox.helloWorld",
        "title": "Hello World",
        "category": "KustoX"
      },
      {
        "command": "kustox.createKustoFile",
        "title": "Create New Kusto File",
        "category": "KustoX"
      },
      {
        "command": "kustox.configureConnection",
        "title": "Configure Connection",
        "category": "KustoX",
        "icon": "$(plug)"
      },
      {
        "command": "kustox.executeQuery",
        "title": "Execute Query",
        "category": "KustoX",
        "icon": "$(play)"
      },
      {
        "command": "kustox.disconnect",
        "title": "Disconnect",
        "category": "KustoX",
        "icon": "$(disconnect)"
      },
      {
        "command": "kustox.addCluster",
        "title": "Add Cluster",
        "category": "KustoX",
        "icon": "$(add)"
      },
      {
        "command": "kustox.refreshConnections",
        "title": "Refresh",
        "category": "KustoX",
        "icon": "$(refresh)"
      },
      {
        "command": "kustox.connectToDatabase",
        "title": "Connect to Database",
        "category": "KustoX",
        "icon": "$(plug)"
      },
      {
        "command": "kustox.removeCluster",
        "title": "Remove Cluster",
        "category": "KustoX",
        "icon": "$(trash)"
      },
      {
        "command": "kustox.editClusterName",
        "title": "Edit Cluster Name",
        "category": "KustoX",
        "icon": "$(edit)"
      },
      {
        "command": "kustox.copyConnectionString",
        "title": "Copy Connection String",
        "category": "KustoX",
        "icon": "$(clippy)"
      },
      {
        "command": "kustox.insertTableName",
        "title": "Insert Table Name",
        "category": "KustoX",
        "icon": "$(symbol-field)"
      },
      {
        "command": "kustox.refreshTables",
        "title": "Refresh Tables",
        "category": "KustoX",
        "icon": "$(refresh)"
      },
      {
        "command": "kustox.testWithMockData",
        "title": "Test with Mock Data",
        "category": "KustoX",
        "icon": "$(beaker)"
      },
      {
        "command": "kustox.showConnectionStatus",
        "title": "Show Connection Status",
        "category": "KustoX",
        "icon": "$(database)"
      },
      {
        "command": "kustox.copyResults",
        "title": "Copy Results",
        "category": "KustoX",
        "icon": "$(copy)"
      },
      {
        "command": "kustox.copyChart",
        "title": "Copy Chart",
        "category": "KustoX",
        "icon": "$(graph)"
      },
      {
        "command": "kustox.openResultsExplorer",
        "title": "Open Results Explorer (VFS)",
        "category": "KustoX",
        "icon": "$(folder-opened)"
      },
      {
        "command": "kustox.exportResultsForAI",
        "title": "Export Results for AI Analysis",
        "category": "KustoX",
        "icon": "$(export)"
      },
      {
        "command": "kustox.clearResultCache",
        "title": "Clear Result Cache",
        "category": "KustoX",
        "icon": "$(trash)"
      },
      {
        "command": "kustox.showStorageStats",
        "title": "Show Storage Statistics",
        "category": "KustoX",
        "icon": "$(graph-line)"
      },
      {
        "command": "kustox.toggleVFSAutoOpen",
        "title": "Toggle VFS Auto-Open",
        "category": "KustoX",
        "icon": "$(eye)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "kustoxConnections",
          "name": "Kusto Clusters",
          "when": "true",
          "icon": "$(server-environment)",
          "visibility": "visible"
        },
        {
          "id": "kustoxVFS",
          "name": "AI Query Results",
          "when": "true",
          "icon": "$(files)",
          "visibility": "visible"
        }
      ],
      "panel": [
        {
          "id": "kustoxResults",
          "name": "Query Results",
          "when": "kustox.hasResults",
          "icon": "$(output)"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "kustox.executeQuery",
          "when": "resourceExtname == .kql || resourceExtname == .kusto",
          "group": "navigation@1"
        },
        {
          "command": "kustox.addCluster",
          "when": "resourceExtname == .kql || resourceExtname == .kusto",
          "group": "navigation@2"
        },
        {
          "command": "kustox.showConnectionStatus",
          "when": "resourceExtname == .kql || resourceExtname == .kusto",
          "group": "navigation@3"
        },
        {
          "command": "kustox.toggleVFSAutoOpen",
          "when": "resourceExtname == .kql || resourceExtname == .kusto",
          "group": "ai@1"
        }
      ],
      "view/title": [
        {
          "command": "kustox.addCluster",
          "when": "view == kustoxConnections",
          "group": "navigation"
        },
        {
          "command": "kustox.refreshConnections",
          "when": "view == kustoxConnections",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kustox.connectToDatabase",
          "when": "view == kustoxConnections && viewItem == database",
          "group": "inline"
        },
        {
          "command": "kustox.removeCluster",
          "when": "view == kustoxConnections && viewItem == cluster",
          "group": "context"
        },
        {
          "command": "kustox.editClusterName",
          "when": "view == kustoxConnections && viewItem == cluster",
          "group": "context"
        },
        {
          "command": "kustox.editClusterName",
          "when": "view == kustoxConnections && viewItem == cluster",
          "group": "inline"
        },
        {
          "command": "kustox.copyConnectionString",
          "when": "view == kustoxConnections && (viewItem == cluster || viewItem == table)",
          "group": "context"
        },
        {
          "command": "kustox.insertTableName",
          "when": "view == kustoxConnections && viewItem == table",
          "group": "inline"
        },
        {
          "command": "kustox.refreshTables",
          "when": "view == kustoxConnections && viewItem == database",
          "group": "context"
        }
      ]
    },
    "keybindings": [
      {
        "command": "kustox.executeQuery",
        "key": "f5",
        "when": "resourceLangId == kusto"
      }
    ],
    "configuration": {
      "title": "KustoX",
      "properties": {
        "kustox.results.maxMemoryResults": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Maximum number of results to keep in memory (ephemeral storage)"
        },
        "kustox.ai.autoExport": {
          "type": "boolean",
          "default": true,
          "description": "Automatically make query results available to AI agents"
        },
        "kustox.ai.autoOpenVFS": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open VFS result file when query is executed (helps GitHub Copilot include it in context)"
        },
        "kustox.auth.silentMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable silent authentication mode to minimize browser notifications and popups"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@azure/identity": "^4.10.2",
    "@azure/msal-node": "^3.6.4",
    "@types/azure-kusto-data": "^0.2.2",
    "azure-kusto-data": "^7.0.1",
    "azure-kusto-ingest": "^7.0.1",
    "uuid": "^11.1.0"
  }
}
